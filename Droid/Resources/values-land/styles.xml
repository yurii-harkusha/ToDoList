<?xml version="1.0" encoding="UTF-8"?>
<resources>
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splash_landscape</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="MyTheme" parent="MyTheme.Base">
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:statusBarColor">@color/main</item>
    <item name="android:colorActivatedHighlight">@android:color/transparent</item>
  </style>
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryDark">@color/gray</item>
    <item name="colorAccent">@color/main</item>
    <item name="colorControlNormal">@color/black</item>
    <item name="android:textColorSecondary">@color/black</item>
    <item name="android:navigationBarColor">@color/main</item>
  </style>
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/main</item>
  </style>
</resources>

